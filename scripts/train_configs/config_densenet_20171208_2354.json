{
  "seed": 2017,

  "model": {"IcebergDenseNet4": {
    "input_n_channels": 3, "n_features": 2,
    "n_classes": 1}
  },

  "criterion": {"BCEWithLogitsLoss": {}},
  "get_trainval_batches_fn": "get_trainval_batches_single_class",
  "to_proba_fn": "sigmoid",

  "n_epochs": 300,
  "validate_every_epoch": 2,

  "fold_index": [0, 1, 2, 3, 4, 5, 6],
  "n_splits": 7,

  "batch_size": 32,
  "num_workers": 12,

  "lr_schedulers": [
      {"ExponentialLR": {"gamma": 0.995} },
      {"ReduceLROnPlateau": {"factor": 0.1, "mode": "min",  "patience": 10, "verbose": "True"}}
  ],

  "early_stopping": {"patience": 30, "mode": "min"},

  "train_aug": {
    "Compose": {
      "transforms": [
        {"ToThreeBands": {}},
        {"RandomApply": {"proba": 0.65,
          "transforms": [
            {"RandomAffine": {
              "translate": [0.15, 0.15],
              "rotation": [-45, 45],
              "interpolation": 0}},
            {"RandomFlip": {"mode": "h", "proba": 0.75}},
            {"RandomFlip": {"mode": "v", "proba": 0.75}}
          ]}
        },
        {"_ToTensor": {}},
        {"_Normalize": {}}
      ]}
  },

  "test_aug": {
    "Compose": {
      "transforms": [
        {"ToThreeBands": {}},
        {"RandomFlip": {"mode": "h", "proba": 0.5}},
        {"RandomFlip": {"mode": "v", "proba": 0.5}},
        {"_ToTensor": {}},
        {"_Normalize": {}}
      ]}
  },

  "optimizer": {
    "Adam": {
      "params": [
        {"params": {"model.features.parameters": {}}, "lr": 0.00004321},
        {"params": {"model.classifier.parameters": {}}, "lr": 0.0001123},
        {"params": {"model.final_classifier.parameters": {}}, "lr": 0.000321}
      ]
    }
  }
}