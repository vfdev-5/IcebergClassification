{
  "seed": 12345,

  "model": {"IcebergVGG13WithAnglesAndStats": {
    "input_n_channels": 3, "input_size": [75, 75], "n_classes": 1}
  },

  "criterion": {"BCEWithLogitsLoss": {}},
  "get_trainval_batches_fn": "get_trainval_batches_with_metadata",
  "to_proba_fn": "torch.nn.functional.sigmoid",

  "n_epochs": 1000,
  "validate_every_epoch": 4,

  "fold_index": [0, 2, 4],
  "n_splits": 5,

  "batch_size": 32,
  "num_workers": 12,

  "lr_schedulers": [
      {"MultiStepLR": {"milestones": [200, 400, 450, 500], "gamma": 0.5}},
      {"ReduceLROnPlateau": {"factor": 0.2, "mode": "min",  "patience": 17, "verbose": "True"}}
  ],

  "early_stopping": {"patience": 100, "mode": "min"},

  "train_aug": {
    "Compose": {
      "transforms": [
        {"ToThreeBands": {}},
        {"RandomAffine": {
          "translate": [0.15, 0.15],
          "rotation": [-45, 45],
          "scale": [1.0, 1.3],
          "interpolation": 2}},
        {"RandomFlip": {"mode": "h", "proba": 0.5}},
        {"RandomFlip": {"mode": "v", "proba": 0.5}},
        {"_ToTensor": {}}
      ]}
  },

  "test_aug": {
    "Compose": {
      "transforms": [
        {"ToThreeBands": {}},
        {"RandomFlip": {"mode": "h", "proba": 0.5}},
        {"RandomFlip": {"mode": "v", "proba": 0.5}},
        {"_ToTensor": {}}
      ]}
  },

  "optimizer": {
    "Adam": {
      "params": [
        {"params": {"model.features.parameters": {}},          "lr": 0.000011},
        {"params": {"model.classifier.parameters": {}},        "lr": 0.000012},
        {"params": {"model.metadata_features.parameters": {}}, "lr": 0.000012},
        {"params": {"model.final_classifier.parameters": {}},  "lr": 0.000012}
      ]
    }
  }

}